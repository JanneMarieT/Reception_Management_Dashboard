   <section id="delivery_table">
    <div class="col mb-6">
        <div class="container-fluid">
            <h2>Delivery Board</h2>
            <div class="row">
                <div class="col">
                    <div class="table table-responsive">
                        <table class="table table-bordered table-hover m-0" id="driver_table">
                            <thead>
                                <tr>
                                    <th>Vehicle</th>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Telephone</th>
                                    <th>Delivery Address</th>
                                    <th>Return Time</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <button class="delivery_clear" type="button"><span>Clear </span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
    <section>
        <!-- <div class="toast-container position-relative"></div>-->
        <div class="toast" id="deliverToast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
            <div class="toast-header">
                <strong>Delivery Driver is late!</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"
                    aria-label="Close"></button>
            </div>
            <div class="toast-body" id="deliverToastBody">
            </div>
        </div>
</section>